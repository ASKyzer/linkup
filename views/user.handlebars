<!-- User Info container -->
<div class="container user-container">


      <div class="row profile-row">
        <div class="col-sm-4">
        
          <div class="row" align="center">
            <div class="col">
              <img class="user-image img img-responsive img-fluid"src="http://placehold.it/200x200&amp;text=UserImage" alt="">
            </div>
          </div>


        </div>

        <div class="col-sm-8">
          <div class="row">
            <div class="col">
              <p id="username"></p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <p id="bio"></p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <button id="edit-profile" type="button" name="edit-profile">Edit Profile</button>
            </div>
          </div>
        </div>
      </div>


  <div class="row" id="linkCards">
    <!-- user's links -->
    {{#each links}}
    <div class="col-md-4 col-sm-6 col-xs-12">
        {{> links/link}}
    </div>
    {{/each}}
  </div>


<!-- FOOTER  -->
<footer class="fixed-bottom">
    <div class="row footer-row" align="center">
      <div class="col">
        <button type="button" class="btn btn-lg btn-block col-sm-3 target_home">
          <span class="material-icons home"></span>
        </button>
      </div>
      <div class="col">
        <button type="button" class="btn btn-lg btn-block col-sm-3 target_search">
          <span class="material-icons search"></span>
        </button>
      </div>
      <div class="col">
        <button type="button" class="add-link-button btn btn-lg btn-block col-sm-3 target_add" data-toggle="modal" data-target="#add-link-modal">
          <span data-toggle="modal" data-target="#add-link-modal" class="material-icons add"></span>
        </button>
      </div>
      <div class="col">
        <button type="button" class="btn btn-lg btn-block col-sm-3 target_person">
          <span class="material-icons person"></span>
        </button>
      </div>
    </div>
</footer>



<!-- New Link Form -->
<div class="newLink-box">
  <img class="profileImg" src="https://placehold.it/100x100" alt="">
  <button class="close-btn">
    <span class="material-icons clear"></span>
  </button>
  <div class="row">
    <div class="col">
      <h5 class="modal-title" id="add-link-title" align="center">Share Your Links Here</h5>
    </div>
  </div>
  <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close"> -->
  <form class="add-link">
    <div class="form-group">
      <label for="site-title">Site Title:</label>
      <input type="text" class="form-control" id="site-title" placeholder="Name of Site">
    </div>
    <div class="form-group">
      <label for="site-url">Site URL:</label>
      <input type="url" class="form-control" id="site-url" required>
    </div>
    <!-- <div class="form-group"> -->
    <label for="site-description">Site Description</label>
    <textarea class="form-control" id="site-description" rows="3" placeholder="Enter a brief description of the website"></textarea>
    <!-- </div> -->
    <div class="form-check" id="shareOption">
      <div class="row">
        <div class="col">
          <input class="form-check-input" type="radio" name="shareLinkOption" id="shareLink" value="true" checked>
          <label class="form-check-label" for="shareLink">Share</label>
        </div>
        <div class="col">
          <input class="form-check-input" type="radio" name="shareLinkOption" id="privateLink" value="false">
          <label class="form-check-label" for="privateLink">Private</label>
        </div>
        <div class="row">
          <div class="col">
            <div class="modal-footer">
              <button id="new-link-submit" type="button" class="btn btn-primary">Submit Link</button>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
</form>
<div class="modal-footer">
</div>
</div>


<!-- User Profile Form -->
<div class="profile-box">
  <img id="preview" class="user-image img img-responsive img-fluid" src="https://placehold.it/100x100" alt="">
  <button class="close-btn">
    <span class="material-icons clear"></span>
  </button>

  <div class="row">
    <div class="col">
      <form>
        <div class="form-row name-row mb-3">
          <div class="col firstName-col">
            <label for="firstName">First Name:</label>
            <input type="text" class="form-control" id="firstName" placeholder="(Optional)">
          </div>
          <div class="col lastName-col">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" placeholder="(Optional)">
          </div>
        </div>
        <div class="row bio-row mb-3">
          <div class="col bio-col">
            <label for="user-bio">Short Bio:</label>
            <div class="input-group">
              <textarea class="form-control" id="userBio" rows="3" placeholder="Tell us a little bit about yourself..."></textarea>
            </div>
          </div>
        </div>
        <div class="row profile-pic-row mt-3">
          <div class="col profile-pic-col">
            <label for="userImg">Profile Picture:</label>
            <input type="file" id="file-input">
            <form method="POST" action="/save-details">
              <input id="profile-submit" class="profile-submit" type="submit" value="Update profile"></input>
            </form>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

