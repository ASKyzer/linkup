<div class="card" data-id="{{this.id}}" data-totalclicks="{{this.totalClicks}}" data-dailyclicks="{{this.dailyClicks}}">
    <a href="{{this.url}}" target="_blank">
        <img class="card-img-top" src="http://placehold.it/300x300&amp;text=CardPlaceholder" alt="">
        <div class="card-body">
            <h4 class="card-title">{{this.title}}</h4>
            <hr>
            <span>
                <p class="card-text">
                    {{this.description}}
                    <br> Total Clicks: {{this.totalClicks}} | Daily Clicks: {{this.dailyClicks}} | Top500?: {{this.top500}}
                </p>
            </span>
        </div>
    </a>
    <button data-userID={{this.UserId}} class="btn btn-primary follow">Follow User</button>
</div>

